@model IEnumerable<ModelsLayer.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-md">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-2">
                <div class="card mt-2">
                    <img src="@product.ImageUrl" class="card-img-top rounded">
                    <div class="card-body">
                    <div class="pl-1">
                        <p class="card-title h10 text-primary">@product.Title</p>
                        <p class="card-title h10  text-info">by <b>@product.Author</b></p>
                    </div>
                    <div class="pl-5">
                        <p>List Price: <strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
                        <p>As low as: <b>$@product.Price100.ToString("0.00")</b></p>
                    </div>
                    </div>
                </div>
                <div>
                    <a asp-action="Details" class="btn btn-primary form-control my-2" asp-route-productId="@product.ID">
                        Details
                    </a>
                </div>
            </div>
        }
    </div>
</div>
